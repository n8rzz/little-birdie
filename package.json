{
  "name": "little-birdy",
  "productName": "little birdy",
  "version": "0.0.0",
  "description": "My marvelous app",
  "license": "MIT",
  "repository": "n8rzz/little-birdy",
  "author": {
    "name": "nate geslin",
    "email": "teamtomkins23@gmail.com"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo",
    "test": "npm run lint",
    "sass": "node-sass ./src/style/index.scss ./dist/style/index.css",
    "start": "electron ./dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos --linux --windows",
    "release": "np"
  },
  "dependencies": {
    "electron-context-menu": "^0.15.0",
    "electron-debug": "^3.0.0",
    "electron-store": "^5.1.0",
    "electron-unhandled": "^3.0.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.13.0",
    "node-sass": "^4.13.1",
    "rss-parser": "^3.7.6",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/electron-debug": "^2.1.0",
    "@types/electron-store": "^3.2.0",
    "@types/electron-unhandled": "^2.2.1",
    "@types/electron-util": "^0.11.1",
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "np": "^5.0.3",
    "xo": "^0.25.3"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.n8rzz.little-birdy",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
