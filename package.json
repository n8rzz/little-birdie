{
  "name": "little-birdy",
  "productName": "little birdy",
  "version": "0.0.0",
  "description": "My marvelous app",
  "license": "MIT",
  "repository": "n8rzz/little-birdy",
  "author": {
    "name": "nate geslin",
    "email": "teamtomkins23@gmail.com"
  },
  "scripts": {
    "build:main:watch": "tsc -p tsconfig.main.json -w",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer:watch": "webpack --config webpack.common.js --watch",
    "build:renderer": "webpack --config webpack.common.js",
    "dist": "electron-builder --macos --linux --windows",
    "lint": "xo",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "release": "np",
    "sass": "node-sass ./src/style/index.scss ./dist/style/index.css",
    "start": "electron main.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "electron-context-menu": "^0.15.0",
    "electron-debug": "^3.0.0",
    "electron-store": "^5.1.0",
    "electron-unhandled": "^3.0.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.13.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rss-parser": "^3.7.6",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.2",
    "@types/electron": "^1.6.10",
    "@types/electron-debug": "^2.1.0",
    "@types/electron-store": "^3.2.0",
    "@types/electron-unhandled": "^2.2.1",
    "@types/electron-util": "^0.11.1",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/react-test-renderer": "^16.9.2",
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "jest": "^25.2.7",
    "np": "^5.0.3",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^25.3.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "xo": "^0.25.3"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.n8rzz.little-birdy",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  }
}
